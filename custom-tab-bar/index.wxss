.nav-bar-box {
	position: fixed;
	width: 100%;
	height: 100rpx;
	left: 0;
	bottom: 0;
	display: flex;
	justify-content: space-evenly;
	align-items: center;
}

.nav-bar {
	flex-direction: column;
	text-align: center;
	font-size: 26rpx;
}

.nav-bar-icon {
	width: 50rpx;
	height: 50rpx;
}

.nav-bar-selected {
	color: red;
}

.nav-bar-selected > .nav-bar-icon {
	padding: 2px;
	background: linear-gradient(to right top, #f6171a, #ffffff);
	border-radius: 50%;
}