.nav-bar-box {
	position: fixed;
	width: 100%;
	height: 100rpx;
	left: 0;
	bottom: 0;
	display: flex;
	justify-content: space-evenly;
	align-items: center;
	box-shadow: 0 -5rpx 2rpx #eeeeee;
}

.nav-bar {
	display: flex;
	flex: 1;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 100%;
	font-size: 26rpx;
	color: #707070;
	background-color: #ffffff;
}

.nav-bar-icon {
	width: 50rpx;
	height: 50rpx;
}

.nav-bar-selected {
	color: #FF3A3A;
}

.nav-bar-selected .nav-bar-icon {
	padding: 2px;
	border-radius: 50%;
	background: linear-gradient(
		to right top, 
		#FF3A3A 45%, 
		transparent
	);
}

