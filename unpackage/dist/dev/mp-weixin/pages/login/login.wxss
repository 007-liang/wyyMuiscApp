page {
  background-color: #DB2C1F;
  padding-top: 200rpx;
}
.logo-box {
  position: fixed;
  padding: 20rpx;
  width: 100rpx;
  height: 100rpx;
  top: 30%;
  left: 50%;
  border-radius: 50%;
  box-sizing: 0 0 10rpx #999999;
  background-color: #F22A25;
  transform: rotateZ(20deg) translateX(-50%);
}
.logo {
  width: 100%;
}
/* 涟漪效果 */
@keyframes ripples {
0% {
    border-color: #eeeeee;
    opacity: 0;
}
20% {
    opacity: 0.2;
}
70% {
    opacity: 0.1;
}
100% {
    border-color: #eeeeee;
    opacity: 0;
    width: 300%;
    height: 300%;
}
}
/* less混入 */
.baseStyle {
  content: '';
  position: fixed;
  top: 40%;
  left: 50%;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border-width: 1rpx;
  border-color: transparent;
  border-style: solid;
  transform: translate(-50%, -42%);
  animation: ripples 5s infinite;
}
.logo::before {
  content: '';
  position: fixed;
  top: 40%;
  left: 50%;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border-width: 1rpx;
  border-color: transparent;
  border-style: solid;
  transform: translate(-50%, -42%);
  animation: ripples 5s infinite;
  animation-delay: 0s;
}
.logo::after {
  content: '';
  position: fixed;
  top: 40%;
  left: 50%;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border-width: 1rpx;
  border-color: transparent;
  border-style: solid;
  transform: translate(-50%, -42%);
  animation: ripples 5s infinite;
  animation-delay: 3s;
}
