page {
  background-color: #eeeeee;
}
.base-shelf {
  border-radius: 8px;
  background-color: #ffffff;
  box-shadow: 0px 0px 5px #cccccc;
  overflow: hidden;
}
.login-bar {
  display: flex;
  padding: 40rpx 30rpx;
  align-items: center;
}
.user-avatar {
  box-sizing: border-box;
  display: flex;
  width: 100rpx;
  height: 100rpx;
  padding-top: 15rpx;
  border-radius: 50%;
  border: 2rpx solid #FFFFFF;
  background-color: #F8F1F1;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.user-avatar .iconfont {
  color: #F9D9D9;
  font-size: 90rpx;
}
.login-name {
  padding-left: 15rpx;
  padding-right: 5rpx;
  font-size: 26rpx;
  font-weight: 700;
}
.margin {
  margin: 0 20rpx;
}
.my-recommend-list {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 20rpx;
}
.news-songs {
  flex: 30%;
}
.news-songs .news-song-name {
  font-size: 16rpx;
  font-weight: 700;
}
.news-songs .news-song-name,
.news-songs .news-songs-pic {
  width: 220rpx;
}
